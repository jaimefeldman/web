.Card 
	width: 200px
	background: #C2AC37
	border: 5px solid gray
	border-radius: .5em
	padding .5em

	&-description 
		background: white
		padding: .5em
		font-size: 12px
		margin-bottom .5em
		border 2px solid black

	&-image 
		width: 100%

	&-name
		color white
		text-transform uppercase
		margin 0 0 .5em 0
		font-size 1em
	&-attack
		background black
		color white
		font-size .7em
		
